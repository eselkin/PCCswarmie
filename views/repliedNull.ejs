<% posts.forEach( function(post) { %>
<div class="post" onclick="location.href='/post?id=<%= post.id %>';">
    <div class="container">
         <div class="row">
             <div class="col-md-8">
                 <p class="text-warning"><%= post.title %></p>
             </div>
         </div>
         <div class="row">
             <div class="col-md-8">
                 <p class="text-primary"><%= post.textbody %></p>
             </div>
         </div>
         <div class="row">
             <div class="col-md-8"><a href="<%= post.url %>"><%= post.url %></a></div>
         </div>
         <div class="row">
            <div class="col-md-3" style="text-align:right"><%= post.author %> has <%= post.numresponses %> response(s)</div>
         </div>

         <% if (user.isAdmin) { %>
         <div class="row">
             <a href='/delete?id=<%=post.id%>'>delete this post (warning will delete all subposts)</a>
         </div>
         <% } %>
    </div>
</div>
<% }); %>%
